<h1 class="main-title">Cocktails</h1>

<div class="container">
  <% @cocktails.each do |cocktail| %>
    <h1><%= link_to cocktail.name, cocktail_path(cocktail) %></h1>
    <p>
      <%= link_to cocktail_path(cocktail), method: :delete do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
    <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>

  <%= link_to "add cocktail", new_cocktail_path %>
</div>
